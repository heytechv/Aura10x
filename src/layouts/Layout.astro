---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "AURA" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="AURA - manage your perfume collection" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex min-h-screen flex-col bg-background font-sans antialiased">
    <slot />
  </body>
</html>
